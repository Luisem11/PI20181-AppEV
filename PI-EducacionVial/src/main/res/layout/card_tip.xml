<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Title"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:hint="Subtitle"
            android:longClickable="true"
            android:inputType="textMultiLine"
            android:textColor="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_below="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:id="@+id/type"
            android:onClick="onClick">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:backgroundTint="#4F5D73"
                android:elevation="@dimen/cardview_default_elevation"
                card_view:cardElevation="4dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textv1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="TÃ©cnicas de manejo"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:textColor="@color/graylight"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:backgroundTint="@color/colorAccent"
                android:elevation="@dimen/cardview_default_elevation"
                card_view:cardElevation="4dp"
                android:paddingRight="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/textv2"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Normatividad"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:textColor="@color/graylight"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:backgroundTint="#F7F1E6"
                android:elevation="@dimen/cardview_default_elevation"
                card_view:cardElevation="4dp"
                android:paddingRight="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/textv3"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Indumentaria"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:textColor="@android:color/darker_gray"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:backgroundTint="#005b9f"
                android:elevation="@dimen/cardview_default_elevation"
                card_view:cardElevation="4dp"
                android:paddingRight="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/textv4"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Infracciones"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:textColor="@color/graylight"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>